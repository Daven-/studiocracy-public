<div class="contain-margins comment" id="<%= comment.id %>">

  <div class="col-sm-12">
  <div class='votes' id="votesMargin">

    <% @netvotes = comment.netvotes %>

    <%= react_component 'VoteBox',
                        {
                         initialVoteCount: @netvotes,
                         parentID: comment.id,
                         initialHasUpvote: (current_user.voted_up_on? comment),
                         initialHasDownvote: (current_user.voted_down_on? comment),
                         hasDownvoteButton: true,
                         votableType: "comments"
                        }
    %>

    </div>
    <img src="images/icon-play32.png" style="margin-top: 30px;">
    <p class="name-margin"><%= comment.user.fullname %></p>
  </div>

  <!--/  <div class="col-sm-10 margin-top-5 text-right">
<#%= link_to "x", comment_path(comment), :method => :delete, data: { :confirm => "Are you sure you want to remove this comment?" } %>
</div>   -->
  <!--/ looks like delete functionis not in the final design-->

  <div class="col-sm-12">
    <p class="body-text"><%= comment.body %></p>
  </div>

  <!--reply-->
    <span>
  <div class="col-sm-8">
    <button class='reply-button' id='<% comment.id %>-reply'>reply</button>
    <!--/ delete button when ready link_to will handle reply and share-->
    <%= link_to 'reply', '#',
                :id => comment.id, class: 'link-button'%>
    <%= link_to 'share', '#',
                :id => comment.id, class: 'link-button'%>
  </div>
  <div class="col-sm-4 text-right">
    <p align="bottom"> <!-- for when the other one is commented out -->
      <%= l(comment.created_at, format: '%B, %d %Y') %>
    </p>
  </div>
        </span>
  <!--/ end of reply and date of comment-->


</div>
